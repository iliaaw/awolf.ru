= wrap_layout :blog do
  .post
    %h2 #{ data.page.verbose }
    .timestamp
      published at #{ data.page.date.strftime('%d %B %Y') }
      %span.timeago{ :title => data.page.date } 
    = yield
    .tags
      - data.page.tags.split(', ').each do |tag|
        %a{ :href => "/blog/tags/#{tag}", :class => 'tag' } #{tag}