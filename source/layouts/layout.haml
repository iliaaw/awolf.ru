!!!
%html
  %head
    %meta{ :charset => 'utf-8' }
    %meta{ :content => 'IE=edge,chrome=1', :'http-equiv' => 'X-UA-Compatible' }
    %title #{ yield_content(:title) || data.page.verbose || data.page.title }
    
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=PT+Serif:700&subset=latin,cyrillic'
    = stylesheet_link_tag 'app'
    = javascript_include_tag 'app'
  %body{ :class => "#{ page_classes }" }
    = yield