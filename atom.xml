---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>Yet Another Blog</title>
    <link href="http://awolf.ru/"/>
    <link type="application/atom+xml" rel="self" href="http://awolf.ru/atom.xml"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>http://awolf.ru/</id>
    <author>
        <name>Ilya Khokhryakov</name>
        <email>ilyahohryakov@gmail.com</email>
    </author>

    {% for post in site.posts %}
        <entry>
            <id>http://awolf.ru{{ post.id }}</id>
            <link type="text/html" rel="alternate" href="http://awolf.ru{{ post.url }}"/>
            <title>{{ post.title }}</title>
            <published>{{ post.date | date_to_xmlschema }}</published>
            <updated>{{ post.date | date_to_xmlschema }}</updated>
            <author>
                <name>Ilya Khokhryakov</name>
                <uri>http://awolf.ru/</uri>
            </author>
            <content type="html">{{ post.content | remove:"<cut />" | xml_escape }}</content>
        </entry>
    {% endfor %}
</feed>